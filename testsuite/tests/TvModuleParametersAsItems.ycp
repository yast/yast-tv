{
    // testedfiles: Tv.ycp

    include "testsuite.ycp";

    map READ = $[
	"target" : $[ "size": -1, "tmpdir" : "/tmp", ]
    ];

    TESTSUITE_INIT([READ], nil);
    import "Tv";

    define void TEST_It_Now(string s_module, map params) ``{
	DUMP("---------------");

	Tv::kernel_modules = nil;
	list items = Tv::ModuleParametersAsItems(Tv::kernel_modules,s_module,params);
	DUMP(items);


	Tv::kernel_modules = $[];
	items = Tv::ModuleParametersAsItems(Tv::kernel_modules,s_module, params);
	DUMP(items);


	Tv::kernel_modules = $[
		"bttv":$["module_description":"bttv - v4l driver module for bt848/878 based cards", "tuner":"specify installed tuner type"],
	];
	items = Tv::ModuleParametersAsItems(Tv::kernel_modules,s_module, params);
	DUMP(items);

    }

    TEST_It_Now("bttv", $[ "non_existing_parameter" : "its_value" ]);

	TEST_It_Now("bttv", $[ "tuner" : "1" ]);
}
